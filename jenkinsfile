pipeline {
    agent any 
    stages {
        stage('SCM Checkout') { 
            steps {
                retry(3){
                    git branch: 'main',url:'https://github.com/IshanNikeshalaNawarathna/sample-note-app.git'
                }
            }
        }
        stage('Build') { 
            steps {
                bat 'docker build -t ishannikeshala/node-app:%BUILD_NUMBER% .'
            }
        }
        stage('Test') { 
            steps {
                withCredentials([string(credentialsId: 'note-apps', variable: 'docker-hubpass')]) {
                     bat 'docker login -u ishannikeshala -p ${docker-hubpass}'
                }
            }
        }
        stage('Deploy') { 
            steps {
                 bat 'docker push ishannikeshala/node-app:%BUILD_NUMBER%'
            }
        }
    }
    post{
        always{
            bat 'docker logout'
        }
    }
}